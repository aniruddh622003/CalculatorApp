<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/tooldark"
            android:layout_alignParentTop="true"
            android:background="#212121"
            android:layout_centerHorizontal="true"
            app:theme="@style/Dark"
            app:popupTheme="@style/PopupThemeDark"
            app:title="DEG"
            app:titleTextColor="#239e29"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/signdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#c6c6c6"
                android:textSize="30sp"
                android:padding="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/dark_rectangle"
                android:elevation="1dp"/>
            <TextView
                android:id="@+id/resultdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:textColor="#c6c6c6"
                android:textSize="35sp"
                android:padding="10dp"
                android:layout_weight="8"

                android:background="@drawable/dark_rectangle"
                android:elevation="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/inputdark"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="end|bottom"
                android:textColor="#fff"
                android:textSize="45sp"
                android:padding="10dp"
                android:layout_weight="8"

                android:background="@drawable/dark_rectangle"
                android:elevation="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/Button7dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:text="7"
                android:textSize="35sp"
                />
            <Button
                android:id="@+id/Button8dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:text="8"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/Button9dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="9"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/Dividedark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_fun_dark"
                android:textColor="#c9c9c9"
                android:text="รท"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/Button4dark"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="4"
                android:textSize="35sp"
                />
            <Button
                android:id="@+id/Button5dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="5"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/Button6dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="6"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/multiplydark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_fun_dark"
                android:textColor="#c9c9c9"
                android:text="ร"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/Button1dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="1"
                android:textSize="35sp"
                />
            <Button
                android:id="@+id/Button2dark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="2"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/Button3dark"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="3"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/plusdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_fun_dark"
                android:textColor="#c9c9c9"
                android:text="+"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/dotdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="."
                android:textSize="35sp"/>
            <Button
                android:id="@+id/Button0dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:fontFamily="sans-serif"
                android:layout_weight="1.5"
                android:text="0"
                android:textSize="35sp"/>
            <Button
                android:id="@+id/equaldark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:layout_weight="1.5"
                android:text="="
                android:textSize="35sp"/>
            <Button
                android:id="@+id/minusdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_fun_dark"
                android:textColor="#c9c9c9"
                android:text="-"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/Deldark"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:text="Delete"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/cleardark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#239e29"
                android:background="@drawable/ripple_num_dark"
                android:text="Clear"
                android:textSize="20dp"
                />


            <Button
                android:id="@+id/exitdark"
                android:layout_width="0dp"
                android:fontFamily="sans-serif"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/ripple_num_dark"
                android:textColor="@color/Red"
                android:text="Exit"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/negdark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_fun_dark"
                android:textColor="#c9c9c9"
                android:text="Negate"
                android:textSize="12dp"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>