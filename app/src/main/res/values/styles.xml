<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#144818</item>
        <item name="colorPrimary">#1b5e20</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#002602</item>
        <item name="colorPrimary">#1b5e20</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#002602</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#212121</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">#239e29</item>
    </style>
    <style name="PopupThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">#002602</item>
    </style>


</resources>
